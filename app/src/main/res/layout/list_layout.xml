<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@mipmap/ic_fingerprint" />

    <TextView
        android:textSize="25sp"
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignTop="@id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/btn_delete"
        android:layout_alignEnd="@id/btn_delete"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

    <TextView
        android:textSize="15sp"
        android:id="@+id/textView_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignStart="@id/textView_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/textView_url"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#FFFFFF"
        android:layout_alignLeft="@id/btn_delete"
        android:layout_alignBottom="@id/textView_url"
        android:layout_marginLeft="-50dp"
        app:srcCompat="@drawable/ic_edit_black_24dp" />
</RelativeLayout>